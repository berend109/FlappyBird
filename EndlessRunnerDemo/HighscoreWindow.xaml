<Window x:Class="EndlessRunnerDemo.HighscoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EndlessRunnerDemo"
        mc:Ignorable="d"
        Title="HighscoreWindow" Height="450" Width="800">
    <Canvas Name="MyCanvas" Focusable="True" KeyDown="KeyIsDown" KeyUp="KeyIsUp" Background="LightCyan">

        <Label Name="highscoreTitle" Foreground="Black" FontSize="32" FontWeight="Bold" Content="Highscore:" />

        <ListView Name="highscoreList" ItemsSource="{Binding}" Canvas.Top="50" Canvas.Left="10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding rank}" Margin="3,0"/>
                        <TextBlock Text="{Binding score}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        



    </Canvas>
</Window>
